{
  "extends": "tsconfig/vue.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "types": [
      "vite/client",
      "node",
    ],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ]
}
